@inherits LayoutComponentBase
@using PaternBlazor.Model

<div class="sidebar">
    <NavMenu />
</div>
    
<div class="main">
    <div class="top-row px-4">
        @if (User == null)
        {
            <button href="/">Войти</button>
        }
        else
        {
            <button target="_blank">Выйти</button>
        }
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>

@code{
    [Parameter]
    public User User { get; set; }

    [Parameter]
    public ClientConnection ClientConnection { get; set; }

    protected async override Task OnInitializedAsync()
    {
        User = null;
        ClientConnection = await ClientConnection.CreateClientConnection();
    }
}